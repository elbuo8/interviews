include layout
  block content
    div#header
      ul
        li
          h1#title College Hack
        li.navigation-links
          a(href='/registration', title='Create an Account') Sign Up
        li.navigation-links
          a(href='/login', title='Login in your Account') Login

    div.container
      div.sign-in
        h2#login-title Create your account
        form(action='/registration', method='post')
          div
            input(type='text', name = 'username', placeholder = 'username')
          div
            input(type='email', name = 'email', placeholder = 'email')
          div
            select
              option University of Puerto Rico - Mayaguez Campus 
          div
            input(type='password', name = 'password', placeholder = 'password')
          div
            button.btn-blue.btn-register(type='submit') Register