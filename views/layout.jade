doctype 5
html
  head
    title= "SkedIt"
    link(rel='stylesheet', href='stylesheets/reset.css')
    link(rel='stylesheet', href='stylesheets/style.css')
    script(async src='components/jquery/jquery.min.js')

  body
    div#header
      ul
        li
          h1#title College Hack
        if typeof(user) == 'undefined'
          li.navigation-links
            a(href='/registration', title='Create an Account') Sign Up
          li.navigation-links
            a(href='/login', title='Login in your Account') Login
        else
          li.navigation-links
            a(href='/logout', title='Logout of your Account') Logout
    block content
    block script